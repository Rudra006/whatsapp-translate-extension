{
  "manifest_version": 2,
  "name": "WhatsApp Translator",
  "version": "1.0",
  "description": "Translate WhatsApp Web messages into different languages",
  "permissions": [
    "activeTab",
    "http://localhost:8081/",
    "https://web.whatsapp.com/",
    "storage"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "content.js"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "48": "icon.png"
  }
}